{
  "manifest_version": 3,
  "name": "English Dictionary",
  "version": "1.3",
  "description": "划词查看英英词典解释，支持生词本功能",
  "permissions": ["storage", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+S",
        "windows": "Alt+S",
        "chromeos": "Alt+S"
      },
      "description": "打开/关闭生词本侧边栏"
    },
    "toggle-popup": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Command+D",
        "windows": "Alt+D",
        "chromeos": "Alt+D"
      },
      "description": "启用/禁用划词查词功能"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "English Dictionary - 生词本"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
